<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AYO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
<body>
    <%- include('./partials/_navbar') %>
    <% if (user.role === 'Guest') { %>
      <label for="sort">Sort by price:</label>
      <div class="btn-group">
        <a href="/guest/hotels?sort=low" class="btn btn-outline-primary">Low</a>
        <a href="/guest/hotels?sort=high" class="btn btn-outline-primary">High</a>
      </div>
    <% } %>
      <% data.forEach(el => { %>
        <div class="card" style="width: 18rem;">
          <img src="<%= el.imgUrl %>" class="card-img-top" alt="">
          <div class="card-body">
            <h4 class="card-title"><%= el.name %></h4>
            <h5 class="card-subtitle">Bintang <%= el.rate %></h5>
            <h5 class="card-subtitle"><%= el.formatToIdr %> </h5>
            <h5 class="card-subtitle"><%= el.location %></h5>
            <h6 class="card-body"><%= el.facility %></h6>
            <% if (el.Rooms.length > 0) { %>
              <h6>Room:</h6>
              <ul>
                <% el.Rooms.forEach(room => { %>
                  <li><%= room.name %></li>
                <% }) %>
              </ul>
            <% } %>
            <% if (user.role === 'Guest') { %>
              <a href="/guest/hotels/<%= el.id %>/form" class="btn btn-primary">Booking</a>
              <% } else { %>
              <a href="/host/hotels/<%= el.id %>/add" class="btn btn-primary">Add Room</a>
              <a href="/host/hotels/<%= el.id %>/edit" class="btn btn-primary">Edit</a>
              <a href="/host/hotels/<%= el.id %>/delete" class="btn btn-primary">Delete</a>
            <% } %>
          </div>
        </div>
     <% }) %>


</body>
</html>